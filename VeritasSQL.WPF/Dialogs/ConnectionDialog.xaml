<Window x:Class="VeritasSQL.WPF.Dialogs.ConnectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Edit Connection Profile" 
        Height="400" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Name -->
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Name:" VerticalAlignment="Center" Margin="5"/>
        <TextBox Grid.Row="0" Grid.Column="1" x:Name="NameTextBox" Margin="5"/>

        <!-- Server -->
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Server:" VerticalAlignment="Center" Margin="5"/>
        <TextBox Grid.Row="1" Grid.Column="1" x:Name="ServerTextBox" Margin="5"/>

        <!-- Database -->
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Database:" VerticalAlignment="Center" Margin="5"/>
        <TextBox Grid.Row="2" Grid.Column="1" x:Name="DatabaseTextBox" Margin="5"/>

        <!-- Auth Type -->
        <TextBlock Grid.Row="3" Grid.Column="0" Text="Authentication:" VerticalAlignment="Center" Margin="5"/>
        <ComboBox Grid.Row="3" Grid.Column="1" x:Name="AuthTypeComboBox" Margin="5"
                  SelectionChanged="AuthTypeComboBox_SelectionChanged">
            <ComboBoxItem Content="Windows Authentication" Tag="Windows" IsSelected="True"/>
            <ComboBoxItem Content="SQL Server Authentication" Tag="SqlServer"/>
        </ComboBox>

        <!-- Username -->
        <TextBlock Grid.Row="4" Grid.Column="0" Text="Username:" VerticalAlignment="Center" Margin="5"
                   x:Name="UsernameLabel" Visibility="Collapsed"/>
        <TextBox Grid.Row="4" Grid.Column="1" x:Name="UsernameTextBox" Margin="5" 
                 Visibility="Collapsed"/>

        <!-- Password -->
        <TextBlock Grid.Row="5" Grid.Column="0" Text="Password:" VerticalAlignment="Center" Margin="5"
                   x:Name="PasswordLabel" Visibility="Collapsed"/>
        <PasswordBox Grid.Row="5" Grid.Column="1" x:Name="PasswordBox" Margin="5"
                     Visibility="Collapsed"/>

        <!-- Connection Timeout -->
        <TextBlock Grid.Row="6" Grid.Column="0" Text="Timeout (s):" VerticalAlignment="Center" Margin="5"/>
        <TextBox Grid.Row="6" Grid.Column="1" x:Name="TimeoutTextBox" Text="30" Margin="5"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="5">
            <Button Content="Test Connection" Click="TestButton_Click" Width="130"/>
            <Button Content="OK" Click="OkButton_Click" IsDefault="True" Width="80"/>
            <Button Content="Cancel" Click="CancelButton_Click" IsCancel="True" Width="80"/>
        </StackPanel>
    </Grid>
</Window>

