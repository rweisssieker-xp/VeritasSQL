<Window x:Class="VeritasSQL.WPF.Dialogs.ParameterDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enter Parameters" 
        Height="300" Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Please enter the parameters for the query:" 
                   FontWeight="Bold" Margin="0,0,0,10"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="ParameterPanel">
                <!-- Dynamically generated parameter input fields -->
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="OK" Click="OkButton_Click" IsDefault="True" Width="80"/>
            <Button Content="Cancel" Click="CancelButton_Click" IsCancel="True" Width="80"/>
        </StackPanel>
    </Grid>
</Window>

