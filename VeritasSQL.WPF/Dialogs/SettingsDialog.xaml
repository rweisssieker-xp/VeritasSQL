<Window x:Class="VeritasSQL.WPF.Dialogs.SettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="400" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Application Settings"
                   FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1">
            <!-- OpenAI API Key -->
            <TextBlock Text="OpenAI API Key:" FontWeight="Bold" Margin="0,0,0,5"/>
            <PasswordBox x:Name="ApiKeyPasswordBox" Margin="0,0,0,15"
                        ToolTip="Your OpenAI API Key (will be encrypted)"/>

            <!-- OpenAI Model -->
            <TextBlock Text="OpenAI Model:" FontWeight="Bold" Margin="0,0,0,5"/>
            <ComboBox x:Name="ModelComboBox" Margin="0,0,0,15">
                <ComboBoxItem Content="gpt-5-nano" Tag="gpt-5-nano" IsSelected="True"/>
                <ComboBoxItem Content="gpt-5-mini" Tag="gpt-5-mini"/>
            </ComboBox>

            <!-- Default Row Limit -->
            <TextBlock Text="Default Row Limit:" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox x:Name="DefaultRowLimitTextBox" Text="100" Margin="0,0,0,15"
                    ToolTip="Default number of rows to return"/>

            <!-- Max Row Limit -->
            <TextBlock Text="Max Row Limit:" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox x:Name="MaxRowLimitTextBox" Text="10000" Margin="0,0,0,15"
                    ToolTip="Maximum allowed number of rows"/>

            <!-- Query Timeout -->
            <TextBlock Text="Query Timeout (seconds):" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox x:Name="QueryTimeoutTextBox" Text="30" Margin="0,0,0,15"
                    ToolTip="SQL query timeout in seconds"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Save" Width="80" Margin="0,0,10,0" Click="SaveButton_Click"/>
            <Button Content="Cancel" Width="80" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
