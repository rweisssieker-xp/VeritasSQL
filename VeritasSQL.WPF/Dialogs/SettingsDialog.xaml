<Window x:Class="VeritasSQL.WPF.Dialogs.SettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="500" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="âš™ï¸ Application Settings"
                   FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Theme Selection -->
                <TextBlock Text="ðŸŽ¨ Theme:" FontWeight="Bold" Margin="0,0,0,5"/>
                <ComboBox x:Name="ThemeComboBox" Margin="0,0,0,15">
                    <ComboBoxItem Content="â˜€ï¸ Light Mode" Tag="Light" IsSelected="True"/>
                    <ComboBoxItem Content="ðŸŒ™ Dark Mode" Tag="Dark"/>
                    <ComboBoxItem Content="ðŸ’» System Default" Tag="System"/>
                </ComboBox>
                
                <!-- OpenAI API Key -->
                <TextBlock Text="ðŸ”‘ OpenAI API Key:" FontWeight="Bold" Margin="0,0,0,5"/>
                <PasswordBox x:Name="ApiKeyPasswordBox" Margin="0,0,0,15"
                            ToolTip="Your OpenAI API Key (will be encrypted)"/>

                <!-- OpenAI Model -->
                <TextBlock Text="ðŸ¤– OpenAI Model:" FontWeight="Bold" Margin="0,0,0,5"/>
                <ComboBox x:Name="ModelComboBox" Margin="0,0,0,15">
                    <ComboBoxItem Content="gpt-5.1 (Best for complex reasoning)" Tag="gpt-5.1" IsSelected="True"/>
                    <ComboBoxItem Content="gpt-5-mini (Cost-optimized)" Tag="gpt-5-mini"/>
                    <ComboBoxItem Content="gpt-5-nano (High-throughput)" Tag="gpt-5-nano"/>
                    <ComboBoxItem Content="gpt-5 (Previous flagship)" Tag="gpt-5"/>
                </ComboBox>

                <!-- Default Row Limit -->
                <TextBlock Text="ðŸ“Š Default Row Limit:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="DefaultRowLimitTextBox" Text="100" Margin="0,0,0,15"
                        ToolTip="Default number of rows to return"/>

                <!-- Max Row Limit -->
                <TextBlock Text="ðŸ“ˆ Max Row Limit:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="MaxRowLimitTextBox" Text="10000" Margin="0,0,0,15"
                        ToolTip="Maximum allowed number of rows"/>

                <!-- Query Timeout -->
                <TextBlock Text="â±ï¸ Query Timeout (seconds):" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="QueryTimeoutTextBox" Text="30" Margin="0,0,0,15"
                        ToolTip="SQL query timeout in seconds"/>
                
                <!-- Keyboard Shortcuts Info -->
                <Expander Header="âŒ¨ï¸ Keyboard Shortcuts" Margin="0,10,0,0">
                    <Border Background="#F5F5F5" Padding="10" Margin="0,5,0,0">
                        <StackPanel>
                            <TextBlock Text="Ctrl+Enter - Execute Query" Margin="0,2"/>
                            <TextBlock Text="Ctrl+G - Generate SQL" Margin="0,2"/>
                            <TextBlock Text="Ctrl+S - Save to Favorites" Margin="0,2"/>
                            <TextBlock Text="F5 - Refresh Schema" Margin="0,2"/>
                            <TextBlock Text="Ctrl+N - New Connection" Margin="0,2"/>
                            <TextBlock Text="Ctrl+O - Open Settings" Margin="0,2"/>
                            <TextBlock Text="Ctrl+H - Refresh History" Margin="0,2"/>
                            <TextBlock Text="Ctrl+E - Export to CSV" Margin="0,2"/>
                        </StackPanel>
                    </Border>
                </Expander>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="ðŸ’¾ Save" Width="100" Margin="0,0,10,0" Click="SaveButton_Click"
                   Background="#4CAF50" Foreground="White"/>
            <Button Content="Cancel" Width="80" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
