<Window x:Class="VeritasSQL.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VeritasSQL.WPF"
        xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
        mc:Ignorable="d"
        Title="VeritasSQL - Natural Language to SQL" 
        Height="900" Width="1400"
        WindowStartupLocation="CenterScreen">
    
    <!-- Converter Resources -->
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <local:InverseBoolConverter x:Key="InverseBoolConverter"/>
        <local:BoolToColorConverter x:Key="BoolToColorConverter"/>
        <local:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <local:SeverityToColorConverter x:Key="SeverityToColorConverter"/>
        <local:SeverityToBackgroundConverter x:Key="SeverityToBackgroundConverter"/>
        <local:TextToDocumentConverter x:Key="TextToDocumentConverter"/>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top Bar: Connection -->
        <Border Grid.Row="0" Background="#F5F5F5" BorderBrush="#DDD" BorderThickness="0,0,0,1" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Connection:" VerticalAlignment="Center" Margin="5"/>
                <ComboBox Grid.Column="1" 
                          ItemsSource="{Binding ConnectionProfiles}"
                          SelectedItem="{Binding SelectedConnectionProfile}"
                          DisplayMemberPath="Name"
                          IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}"/>
                <Button Grid.Column="2" Content="Connect" Command="{Binding ConnectCommand}"
                        ToolTip="Connect to the selected database"/>
                <Button Grid.Column="3" Content="Load Schema" Command="{Binding LoadSchemaCommand}" 
                        IsEnabled="{Binding IsConnected}"
                        ToolTip="Load database schema (tables, views, columns)"/>

                <StackPanel Grid.Column="4" Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Text="Status:" VerticalAlignment="Center" Margin="5"/>
                    <Ellipse Width="10" Height="10" Margin="5" VerticalAlignment="Center">
                        <Ellipse.Fill>
                            <SolidColorBrush Color="{Binding IsConnected, Converter={StaticResource BoolToColorConverter}}"/>
                        </Ellipse.Fill>
                    </Ellipse>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel: Schema Tree & AI Features -->
            <Border Grid.Column="0" BorderBrush="#DDD" BorderThickness="0,0,1,0">
                <TabControl>
                    <!-- Schema Tab -->
                    <TabItem Header="Schema">
                        <DockPanel>
                            <StackPanel DockPanel.Dock="Top" Margin="5">
                                <Button Content="🤖 AI Schema Insights"
                                        Command="{Binding ExplainSchemaCommand}"
                                        Margin="0,5"
                                        ToolTip="Get AI-powered explanation of database structure and relationships"/>
                                <Button Content="🎯 Smart Filters"
                                        Command="{Binding GenerateSmartFiltersCommand}"
                                        CommandParameter="{Binding SelectedItem.Header, ElementName=SchemaTreeView}"
                                        Margin="0,5"
                                        ToolTip="Generate AI-powered filter suggestions for selected table"/>
                            </StackPanel>
                            <TextBox DockPanel.Dock="Top" x:Name="SchemaFilterBox"
                                     Margin="5" Padding="5"
                                     Text=""
                                     TextChanged="SchemaFilterBox_TextChanged"
                                     ToolTip="Filter schema objects"/>
                            <TreeView x:Name="SchemaTreeView" Margin="5">
                                <!-- Schema populated programmatically -->
                            </TreeView>
                        </DockPanel>
                    </TabItem>

                    <!-- AI Query Suggestions Tab -->
                    <TabItem Header="💡 Suggestions">
                        <DockPanel>
                            <Button DockPanel.Dock="Top" Content="Generate AI Query Suggestions"
                                    Command="{Binding GenerateQuerySuggestionsCommand}"
                                    Margin="10"
                                    ToolTip="AI generates intelligent query suggestions based on your schema"/>

                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <ItemsControl ItemsSource="{Binding QuerySuggestions}" Margin="5">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border BorderBrush="#DDD" BorderThickness="1"
                                                    Margin="5" Padding="10" CornerRadius="5"
                                                    Background="#FAFAFA">
                                                <StackPanel>
                                                    <TextBlock Text="{Binding Title}"
                                                              FontWeight="Bold" FontSize="13"/>
                                                    <TextBlock Text="{Binding Description}"
                                                              TextWrapping="Wrap" Margin="0,5"
                                                              FontStyle="Italic"/>
                                                    <TextBlock Text="{Binding NaturalLanguageQuery}"
                                                              TextWrapping="Wrap" Margin="0,5"
                                                              Foreground="#0066CC"/>
                                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                                        <Border Background="#E3F2FD" Padding="5,2" CornerRadius="3" Margin="0,0,5,0">
                                                            <TextBlock Text="{Binding Category}" FontSize="10"/>
                                                        </Border>
                                                        <Border Background="#FFF9C4" Padding="5,2" CornerRadius="3">
                                                            <TextBlock Text="{Binding Complexity}" FontSize="10"/>
                                                        </Border>
                                                    </StackPanel>
                                                    <Button Content="Use This Query"
                                                            Command="{Binding DataContext.ApplyQuerySuggestionCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                            CommandParameter="{Binding}"
                                                            Margin="0,8,0,0"
                                                            Background="#4CAF50" Foreground="White"/>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </DockPanel>
                    </TabItem>

                    <!-- Schema Insights Tab -->
                    <TabItem Header="📚 Insights">
                        <DockPanel>
                            <Button DockPanel.Dock="Top" Content="Refresh Schema Insights"
                                    Command="{Binding ExplainSchemaCommand}"
                                    Margin="10"
                                    ToolTip="Get AI explanation of database relationships"/>

                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <TextBlock Text="{Binding SchemaInsights}"
                                          TextWrapping="Wrap" Padding="10"
                                          FontFamily="Segoe UI"/>
                            </ScrollViewer>
                        </DockPanel>
                    </TabItem>

                    <!-- Smart Filters Tab -->
                    <TabItem Header="🎯 Filters">
                        <DockPanel>
                            <TextBlock DockPanel.Dock="Top"
                                      Text="Select a table in Schema tab, then generate smart filters"
                                      Padding="10" TextWrapping="Wrap"
                                      Foreground="Gray" FontStyle="Italic"/>

                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <ItemsControl ItemsSource="{Binding SmartFilters}" Margin="5">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border BorderBrush="#DDD" BorderThickness="1"
                                                    Margin="5" Padding="8" CornerRadius="3"
                                                    Background="#F9F9F9">
                                                <StackPanel>
                                                    <TextBlock FontWeight="Bold">
                                                        <Run Text="{Binding Column}"/>
                                                        <Run Text=" (" Foreground="Gray"/>
                                                        <Run Text="{Binding FilterType}" Foreground="Gray"/>
                                                        <Run Text=")" Foreground="Gray"/>
                                                    </TextBlock>
                                                    <TextBlock Text="{Binding SuggestedValue}"
                                                              Foreground="#0066CC" Margin="0,3"/>
                                                    <TextBlock Text="{Binding Reason}"
                                                              TextWrapping="Wrap" FontSize="11"
                                                              Foreground="Gray" Margin="0,3"/>
                                                    <Button Content="Apply Filter"
                                                            Command="{Binding DataContext.ApplySmartFilterCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                            CommandParameter="{Binding}"
                                                            Margin="0,5,0,0"
                                                            Background="#2196F3" Foreground="White"/>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </DockPanel>
                    </TabItem>

                    <!-- Predictive Next Queries Tab -->
                    <TabItem Header="🔮 Predictive">
                        <DockPanel>
                            <Button DockPanel.Dock="Top" Content="Predict Next Queries"
                                    Command="{Binding PredictNextQueriesCommand}"
                                    Margin="10"
                                    Background="#9C27B0" Foreground="White"
                                    ToolTip="Netflix-style recommendations for your next query"/>

                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <ItemsControl ItemsSource="{Binding PredictiveQueries}" Margin="5">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border BorderBrush="#9C27B0" BorderThickness="2"
                                                    Margin="5" Padding="10" CornerRadius="5"
                                                    Background="#F3E5F5">
                                                <StackPanel>
                                                    <TextBlock Text="{Binding Title}"
                                                              FontWeight="Bold" FontSize="14"/>
                                                    <TextBlock Text="{Binding Description}"
                                                              TextWrapping="Wrap" Margin="0,5"/>
                                                    <TextBlock Text="{Binding Reasoning}"
                                                              TextWrapping="Wrap" Margin="0,5"
                                                              FontStyle="Italic" Foreground="#7B1FA2"/>
                                                    <Border Background="#BA68C8" Padding="5,2" CornerRadius="3" Margin="0,5">
                                                        <TextBlock Text="{Binding Category}"
                                                                  FontSize="10" Foreground="White"/>
                                                    </Border>
                                                    <Button Content="Use This Query"
                                                            Command="{Binding DataContext.ApplyPredictiveQueryCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                            CommandParameter="{Binding}"
                                                            Margin="0,8,0,0"
                                                            Background="#9C27B0" Foreground="White"/>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </DockPanel>
                    </TabItem>

                    <!-- JOIN Path Finder Tab -->
                    <TabItem Header="🔗 JOIN Path">
                        <DockPanel>
                            <StackPanel DockPanel.Dock="Top" Margin="10">
                                <TextBlock Text="Find optimal JOIN path between tables"
                                          FontWeight="Bold" Margin="0,0,0,10"/>
                                <TextBlock Text="Source Table:" Margin="0,5,0,2"/>
                                <TextBox Text="{Binding JoinSourceTable, UpdateSourceTrigger=PropertyChanged}"
                                        Padding="5" Margin="0,0,0,5"/>
                                <TextBlock Text="Target Table:" Margin="0,5,0,2"/>
                                <TextBox Text="{Binding JoinTargetTable, UpdateSourceTrigger=PropertyChanged}"
                                        Padding="5" Margin="0,0,0,10"/>
                                <Button Content="Find JOIN Path"
                                        Command="{Binding FindJoinPathCommand}"
                                        Background="#FF5722" Foreground="White"
                                        Padding="10,5"/>
                            </StackPanel>

                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <Border BorderBrush="#FF5722" BorderThickness="2"
                                        Margin="10" Padding="10" CornerRadius="5"
                                        Background="#FFF3E0"
                                        Visibility="{Binding JoinPath, Converter={StaticResource NullToVisibilityConverter}}">
                                    <StackPanel>
                                        <TextBlock FontWeight="Bold" FontSize="14" Margin="0,0,0,5">
                                            <Run Text="Path Length: "/>
                                            <Run Text="{Binding JoinPath.PathLength}"/>
                                        </TextBlock>
                                        <TextBlock Text="{Binding JoinPath.Explanation}"
                                                  TextWrapping="Wrap" Margin="0,5"/>
                                        <Button Content="Apply JOIN SQL"
                                                Command="{Binding ApplyJoinPathCommand}"
                                                Margin="0,10,0,0"
                                                Background="#FF5722" Foreground="White"/>
                                    </StackPanel>
                                </Border>
                            </ScrollViewer>
                        </DockPanel>
                    </TabItem>

                    <!-- Conversational Chat Tab -->
                    <TabItem Header="💬 Chat">
                        <DockPanel>
                            <StackPanel DockPanel.Dock="Top" Margin="10">
                                <TextBlock Text="Conversational SQL Assistant"
                                          FontWeight="Bold" Margin="0,0,0,5"/>
                                <Button Content="Clear Conversation"
                                        Command="{Binding ClearConversationCommand}"
                                        Margin="0,5"
                                        Background="#607D8B" Foreground="White"/>
                            </StackPanel>

                            <Grid DockPanel.Dock="Bottom" Margin="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0"
                                        Text="{Binding ChatMessage, UpdateSourceTrigger=PropertyChanged}"
                                        Padding="8" Margin="0,0,5,0"
                                        ToolTip="Type your message..."/>
                                <Button Grid.Column="1" Content="Send"
                                        Command="{Binding SendChatMessageCommand}"
                                        Background="#00BCD4" Foreground="White"
                                        Padding="15,5"/>
                            </Grid>

                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <ItemsControl ItemsSource="{Binding ChatHistory}" Margin="10">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Margin="0,5">
                                                <Border Background="#E3F2FD" Padding="10" CornerRadius="5" Margin="0,2">
                                                    <TextBlock Text="{Binding UserMessage}" TextWrapping="Wrap"
                                                              FontWeight="Bold"/>
                                                </Border>
                                                <Border Background="#F5F5F5" Padding="10" CornerRadius="5" Margin="0,2">
                                                    <TextBlock Text="{Binding AssistantResponse}" TextWrapping="Wrap"/>
                                                </Border>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </DockPanel>
                    </TabItem>
                </TabControl>
            </Border>

            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch"/>

            <!-- Center Panel: Query & Results -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="150"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Natural Language Input -->
                <DockPanel Grid.Row="0" Margin="10">
                    <StackPanel DockPanel.Dock="Right" Orientation="Vertical">
                        <Button Content="Generate SQL"
                                Command="{Binding GenerateSqlCommand}"
                                Height="30" Width="120" Margin="5,0,0,0"
                                ToolTip="Generate SQL SELECT statement from natural language question using OpenAI"/>
                        <!-- Voice-to-SQL Button -->
                        <Button Content="🎤 Voice Input"
                                Height="25" Width="120" Margin="5,5,0,0"
                                Background="#FF5722" Foreground="White"
                                ToolTip="Speak your query (requires microphone)&#x0a;Note: Requires audio recording implementation"
                                Click="VoiceInputButton_Click"/>
                    </StackPanel>
                    <DockPanel>
                        <TextBlock DockPanel.Dock="Top" Text="Your question in natural language:"
                                   FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding NaturalLanguageQuery, UpdateSourceTrigger=PropertyChanged}"
                                 TextWrapping="Wrap" AcceptsReturn="True"
                                 Height="60"/>
                    </DockPanel>
                </DockPanel>

                <!-- SQL Editor -->
                <DockPanel Grid.Row="1" Margin="10,0,10,10">
                    <DockPanel DockPanel.Dock="Top">
                        <Button DockPanel.Dock="Right" Content="Execute" 
                                Command="{Binding ExecuteQueryCommand}"
                                Background="#4CAF50" Foreground="White"
                                Width="100" Margin="5,0,0,5"
                                ToolTip="Execute SQL query on database (only SELECT allowed)"/>
                        <TextBlock Text="Generated SQL:" FontWeight="Bold" 
                                   VerticalAlignment="Center" Margin="0,0,0,5"/>
                    </DockPanel>
                    <Border BorderBrush="#DDD" BorderThickness="1">
                        <avalonEdit:TextEditor x:Name="SqlEditor"
                                              FontFamily="Consolas" FontSize="12"
                                              ShowLineNumbers="True"
                                              SyntaxHighlighting="SQL"
                                              WordWrap="False"
                                              Document="{Binding GeneratedSql, Converter={StaticResource TextToDocumentConverter}}"/>
                    </Border>
                </DockPanel>

                <!-- Tab Control -->
                <TabControl Grid.Row="3" Margin="10,0,10,10" 
                            SelectedIndex="{Binding SelectedTabIndex}">
                    <!-- Results Tab -->
                    <TabItem Header="Results">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
                                <TextBlock Text="Rows:" FontWeight="Bold" Margin="5"/>
                                <TextBlock Text="{Binding ResultRowCount}" Margin="5"/>
                                <TextBlock Text="Execution Time:" FontWeight="Bold" Margin="20,5,5,5"/>
                                <TextBlock Text="{Binding ExecutionTime}" Margin="5"/>
                                <Button Content="Export as CSV"
                                        Command="{Binding ExportToCsvCommand}"
                                        Margin="20,0,5,0"
                                        ToolTip="Export results as CSV file with metadata"/>
                                <Button Content="Export as Excel"
                                        Command="{Binding ExportToExcelCommand}"
                                        ToolTip="Export results as Excel file (.xlsx) with formatting"/>
                                <Button Content="🤖 AI Data Insights"
                                        Command="{Binding AnalyzeDataInsightsCommand}"
                                        Margin="20,0,5,0"
                                        Background="#FF9800" Foreground="White"
                                        ToolTip="Get AI-powered insights about data quality, patterns, and anomalies"/>
                                <Button Content="📝 AI Summary"
                                        Command="{Binding SummarizeResultsCommand}"
                                        Margin="5,0"
                                        Background="#673AB7" Foreground="White"
                                        ToolTip="Generate natural language summary of results"/>
                                <Button Content="⚠️ Detect Anomalies"
                                        Command="{Binding DetectAnomaliesCommand}"
                                        Margin="5,0"
                                        Background="#F44336" Foreground="White"
                                        ToolTip="AI-powered anomaly detection in results"/>
                                <Button Content="📊 Viz Recommendations"
                                        Command="{Binding RecommendVisualizationsCommand}"
                                        Margin="5,0"
                                        Background="#00BCD4" Foreground="White"
                                        ToolTip="Get AI recommendations for data visualization"/>
                                <Button Content="🔗 Find Correlations"
                                        Command="{Binding FindCorrelationsCommand}"
                                        Margin="5,0"
                                        Background="#9C27B0" Foreground="White"
                                        ToolTip="AI discovers hidden correlations in data"/>
                                <Button Content="📈 Statistical Tests"
                                        Command="{Binding RecommendStatisticalTestsCommand}"
                                        Margin="5,0"
                                        Background="#3F51B5" Foreground="White"
                                        ToolTip="AI recommends appropriate statistical tests"/>
                                <Button Content="📖 Data Story"
                                        Command="{Binding GenerateDataStoryCommand}"
                                        Margin="5,0"
                                        Background="#E91E63" Foreground="White"
                                        ToolTip="Transform data into narrative story"/>
                            </StackPanel>

                            <DataGrid Grid.Row="1"
                                     ItemsSource="{Binding QueryResults.DefaultView}"
                                     AutoGenerateColumns="True"
                                     IsReadOnly="True"
                                     AlternatingRowBackground="#F9F9F9"
                                     GridLinesVisibility="All"
                                     CanUserSortColumns="True"
                                     Margin="5"/>

                            <!-- AI Data Insights Panel -->
                            <Expander Grid.Row="2"
                                     Header="🤖 AI Data Insights"
                                     IsExpanded="True"
                                     Visibility="{Binding DataInsights, Converter={StaticResource NullToVisibilityConverter}}"
                                     Margin="5">
                                <Border BorderBrush="#FF9800" BorderThickness="2" Padding="10"
                                        Background="#FFF3E0">
                                    <ScrollViewer MaxHeight="250" VerticalScrollBarVisibility="Auto">
                                        <StackPanel>
                                            <!-- Summary -->
                                            <TextBlock Text="{Binding DataInsights.Summary}"
                                                      FontWeight="Bold" FontSize="13"
                                                      TextWrapping="Wrap" Margin="0,0,0,10"/>

                                            <!-- Insights -->
                                            <TextBlock Text="📊 Key Insights:"
                                                      FontWeight="Bold" Margin="0,5,0,5"
                                                      Visibility="{Binding DataInsights.Insights.Count, Converter={StaticResource NullToVisibilityConverter}}"/>
                                            <ItemsControl ItemsSource="{Binding DataInsights.Insights}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding}"
                                                                  TextWrapping="Wrap" Margin="15,2,0,2"/>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>

                                            <!-- Data Quality Issues -->
                                            <TextBlock Text="⚠️ Data Quality Issues:"
                                                      FontWeight="Bold" Margin="0,10,0,5"
                                                      Foreground="#D32F2F"
                                                      Visibility="{Binding DataInsights.DataQualityIssues.Count, Converter={StaticResource NullToVisibilityConverter}}"/>
                                            <ItemsControl ItemsSource="{Binding DataInsights.DataQualityIssues}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding}"
                                                                  TextWrapping="Wrap" Margin="15,2,0,2"
                                                                  Foreground="#D32F2F"/>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>

                                            <!-- Recommendations -->
                                            <TextBlock Text="💡 Recommendations:"
                                                      FontWeight="Bold" Margin="0,10,0,5"
                                                      Foreground="#388E3C"
                                                      Visibility="{Binding DataInsights.Recommendations.Count, Converter={StaticResource NullToVisibilityConverter}}"/>
                                            <ItemsControl ItemsSource="{Binding DataInsights.Recommendations}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding}"
                                                                  TextWrapping="Wrap" Margin="15,2,0,2"
                                                                  Foreground="#388E3C"/>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>

                                            <!-- Statistics -->
                                            <Border Background="White" Padding="10" Margin="0,10,0,0"
                                                   BorderBrush="#DDD" BorderThickness="1">
                                                <StackPanel>
                                                    <TextBlock Text="📈 Statistics" FontWeight="Bold" Margin="0,0,0,5"/>
                                                    <TextBlock>
                                                        <Run Text="Null Percentage: "/>
                                                        <Run Text="{Binding DataInsights.Statistics.NullPercentage, StringFormat={}{0:F1}%}" FontWeight="Bold"/>
                                                    </TextBlock>
                                                    <TextBlock>
                                                        <Run Text="Unique Values: "/>
                                                        <Run Text="{Binding DataInsights.Statistics.UniqueValues}" FontWeight="Bold"/>
                                                    </TextBlock>
                                                    <TextBlock>
                                                        <Run Text="Potential Duplicates: "/>
                                                        <Run Text="{Binding DataInsights.Statistics.PotentialDuplicates}" FontWeight="Bold"/>
                                                    </TextBlock>
                                                </StackPanel>
                                            </Border>
                                        </StackPanel>
                                    </ScrollViewer>
                                </Border>
                            </Expander>

                            <!-- AI Result Summary Panel -->
                            <Expander Grid.Row="2"
                                     Header="📝 AI Result Summary"
                                     IsExpanded="True"
                                     Visibility="{Binding ResultSummary, Converter={StaticResource NullToVisibilityConverter}}"
                                     Margin="5">
                                <Border BorderBrush="#673AB7" BorderThickness="2" Padding="10"
                                        Background="#EDE7F6">
                                    <ScrollViewer MaxHeight="200" VerticalScrollBarVisibility="Auto">
                                        <TextBlock Text="{Binding ResultSummary}"
                                                  TextWrapping="Wrap"
                                                  FontFamily="Segoe UI"/>
                                    </ScrollViewer>
                                </Border>
                            </Expander>

                            <!-- Anomaly Detection Panel -->
                            <Expander Grid.Row="2"
                                     Header="⚠️ AI Anomaly Detection"
                                     IsExpanded="True"
                                     Visibility="{Binding AnomalyDetection, Converter={StaticResource NullToVisibilityConverter}}"
                                     Margin="5">
                                <Border BorderBrush="#F44336" BorderThickness="2" Padding="10"
                                        Background="#FFEBEE">
                                    <ScrollViewer MaxHeight="250" VerticalScrollBarVisibility="Auto">
                                        <StackPanel>
                                            <TextBlock Text="{Binding AnomalyDetection.Summary}"
                                                      FontWeight="Bold" Margin="0,0,0,10"
                                                      TextWrapping="Wrap"/>

                                            <ItemsControl ItemsSource="{Binding AnomalyDetection.Anomalies}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border Background="White" Padding="8" Margin="0,5"
                                                               BorderBrush="#E57373" BorderThickness="1">
                                                            <StackPanel>
                                                                <StackPanel Orientation="Horizontal">
                                                                    <Border Background="#F44336" Padding="3,1" CornerRadius="2">
                                                                        <TextBlock Text="{Binding Severity}"
                                                                                  Foreground="White" FontSize="10"/>
                                                                    </Border>
                                                                    <Border Background="#E91E63" Padding="3,1"
                                                                           CornerRadius="2" Margin="5,0,0,0">
                                                                        <TextBlock Text="{Binding Type}"
                                                                                  Foreground="White" FontSize="10"/>
                                                                    </Border>
                                                                </StackPanel>
                                                                <TextBlock Text="{Binding Description}"
                                                                          FontWeight="Bold" TextWrapping="Wrap"
                                                                          Margin="0,5,0,0"/>
                                                                <TextBlock Text="{Binding AffectedRows}"
                                                                          Foreground="Gray" TextWrapping="Wrap"
                                                                          Margin="0,3,0,0"/>
                                                                <TextBlock Text="{Binding Recommendation}"
                                                                          Foreground="#388E3C" FontStyle="Italic"
                                                                          TextWrapping="Wrap" Margin="0,5,0,0"/>
                                                            </StackPanel>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                    </ScrollViewer>
                                </Border>
                            </Expander>

                            <!-- Visualization Recommendations Panel -->
                            <Expander Grid.Row="2"
                                     Header="📊 AI Visualization Recommendations"
                                     IsExpanded="True"
                                     Visibility="{Binding VisualizationRecommendations, Converter={StaticResource NullToVisibilityConverter}}"
                                     Margin="5">
                                <Border BorderBrush="#00BCD4" BorderThickness="2" Padding="10"
                                        Background="#E0F7FA">
                                    <ScrollViewer MaxHeight="250" VerticalScrollBarVisibility="Auto">
                                        <StackPanel>
                                            <!-- Primary Recommendation -->
                                            <TextBlock Text="✨ Primary Recommendation" FontWeight="Bold"
                                                      Margin="0,0,0,5"/>
                                            <Border Background="White" Padding="10" Margin="0,5"
                                                   BorderBrush="#00BCD4" BorderThickness="2">
                                                <StackPanel>
                                                    <TextBlock Text="{Binding VisualizationRecommendations.PrimaryRecommendation.ChartType}"
                                                              FontSize="16" FontWeight="Bold" Foreground="#00838F"/>
                                                    <TextBlock Text="{Binding VisualizationRecommendations.PrimaryRecommendation.Reason}"
                                                              TextWrapping="Wrap" Margin="0,5,0,0"/>
                                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                                        <TextBlock Text="X-Axis: " FontWeight="Bold"/>
                                                        <TextBlock Text="{Binding VisualizationRecommendations.PrimaryRecommendation.XAxis}"/>
                                                        <TextBlock Text="  Y-Axis: " FontWeight="Bold" Margin="10,0,0,0"/>
                                                        <TextBlock Text="{Binding VisualizationRecommendations.PrimaryRecommendation.YAxis}"/>
                                                    </StackPanel>
                                                    <TextBlock Text="{Binding VisualizationRecommendations.PrimaryRecommendation.Configuration}"
                                                              FontStyle="Italic" Foreground="Gray"
                                                              TextWrapping="Wrap" Margin="0,5,0,0"/>
                                                </StackPanel>
                                            </Border>

                                            <!-- Alternative Recommendations -->
                                            <TextBlock Text="💡 Alternative Options" FontWeight="Bold"
                                                      Margin="0,10,0,5"
                                                      Visibility="{Binding VisualizationRecommendations.AlternativeRecommendations.Count, Converter={StaticResource NullToVisibilityConverter}}"/>
                                            <ItemsControl ItemsSource="{Binding VisualizationRecommendations.AlternativeRecommendations}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border Background="White" Padding="8" Margin="0,3"
                                                               BorderBrush="#4DD0E1" BorderThickness="1">
                                                            <StackPanel>
                                                                <TextBlock Text="{Binding ChartType}"
                                                                          FontWeight="Bold" Foreground="#00838F"/>
                                                                <TextBlock Text="{Binding Reason}"
                                                                          TextWrapping="Wrap" Margin="0,3,0,0"/>
                                                                <TextBlock Text="{Binding UseCase}"
                                                                          FontStyle="Italic" Foreground="Gray"
                                                                          TextWrapping="Wrap" Margin="0,3,0,0"/>
                                                            </StackPanel>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>

                                            <!-- Insights -->
                                            <Border Background="#B2EBF2" Padding="10" Margin="0,10,0,0">
                                                <StackPanel>
                                                    <TextBlock Text="🔍 What This Will Reveal:" FontWeight="Bold"/>
                                                    <TextBlock Text="{Binding VisualizationRecommendations.Insights}"
                                                              TextWrapping="Wrap" Margin="0,5,0,0"/>
                                                </StackPanel>
                                            </Border>
                                        </StackPanel>
                                    </ScrollViewer>
                                </Border>
                            </Expander>

                            <!-- Correlation Analysis Panel -->
                            <Expander Grid.Row="2"
                                     Header="🔗 Correlation Analysis"
                                     IsExpanded="False"
                                     Visibility="{Binding CorrelationAnalysis, Converter={StaticResource NullToVisibilityConverter}}"
                                     Margin="5">
                                <Border BorderBrush="#9C27B0" BorderThickness="2" Padding="10"
                                        Background="#F3E5F5">
                                    <ScrollViewer MaxHeight="250" VerticalScrollBarVisibility="Auto">
                                        <StackPanel>
                                            <TextBlock Text="{Binding CorrelationAnalysis.Summary}"
                                                      FontWeight="Bold" TextWrapping="Wrap" Margin="0,0,0,10"/>

                                            <TextBlock Text="Top Correlations:" FontWeight="Bold" Margin="0,5,0,5"/>
                                            <ItemsControl ItemsSource="{Binding CorrelationAnalysis.Correlations}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border BorderBrush="#9C27B0" BorderThickness="1"
                                                               Padding="8" Margin="0,3" Background="White">
                                                            <StackPanel>
                                                                <TextBlock FontWeight="Bold">
                                                                    <Run Text="{Binding Column1}"/>
                                                                    <Run Text=" ↔ "/>
                                                                    <Run Text="{Binding Column2}"/>
                                                                </TextBlock>
                                                                <TextBlock>
                                                                    <Run Text="Coefficient: "/>
                                                                    <Run Text="{Binding CorrelationCoefficient, StringFormat={}{0:F3}}" FontWeight="Bold"/>
                                                                    <Run Text=" ("/>
                                                                    <Run Text="{Binding Strength}"/>
                                                                    <Run Text=", "/>
                                                                    <Run Text="{Binding Direction}"/>
                                                                    <Run Text=")"/>
                                                                </TextBlock>
                                                                <TextBlock Text="{Binding Interpretation}"
                                                                          TextWrapping="Wrap" FontStyle="Italic" Margin="0,3,0,0"/>
                                                            </StackPanel>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>

                                            <TextBlock Text="⚠️ Causation Warnings:" FontWeight="Bold" Margin="0,10,0,5"
                                                      Visibility="{Binding CorrelationAnalysis.CausationWarnings.Count, Converter={StaticResource NullToVisibilityConverter}}"/>
                                            <ItemsControl ItemsSource="{Binding CorrelationAnalysis.CausationWarnings}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding}"
                                                                  TextWrapping="Wrap" Margin="15,2,0,2" Foreground="Red"/>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                    </ScrollViewer>
                                </Border>
                            </Expander>

                            <!-- Statistical Test Recommendation Panel -->
                            <Expander Grid.Row="2"
                                     Header="📈 Statistical Test Recommendations"
                                     IsExpanded="False"
                                     Visibility="{Binding StatisticalTestRecommendation, Converter={StaticResource NullToVisibilityConverter}}"
                                     Margin="5">
                                <Border BorderBrush="#3F51B5" BorderThickness="2" Padding="10"
                                        Background="#E8EAF6">
                                    <ScrollViewer MaxHeight="250" VerticalScrollBarVisibility="Auto">
                                        <StackPanel>
                                            <TextBlock Text="{Binding StatisticalTestRecommendation.PrimaryRecommendation}"
                                                      FontWeight="Bold" FontSize="13" TextWrapping="Wrap" Margin="0,0,0,10"/>

                                            <TextBlock Text="Recommended Tests:" FontWeight="Bold" Margin="0,5,0,5"/>
                                            <ItemsControl ItemsSource="{Binding StatisticalTestRecommendation.RecommendedTests}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border BorderBrush="#3F51B5" BorderThickness="1"
                                                               Padding="8" Margin="0,3" Background="White">
                                                            <StackPanel>
                                                                <TextBlock FontWeight="Bold">
                                                                    <Run Text="{Binding TestName}"/>
                                                                    <Run Text=" ("/>
                                                                    <Run Text="{Binding TestType}"/>
                                                                    <Run Text=")"/>
                                                                </TextBlock>
                                                                <TextBlock Text="{Binding Purpose}"
                                                                          FontStyle="Italic" Margin="0,3,0,0"/>
                                                                <TextBlock>
                                                                    <Run Text="Suitability: "/>
                                                                    <Run Text="{Binding SuitabilityScore, StringFormat={}{0:P0}}" FontWeight="Bold"/>
                                                                </TextBlock>
                                                                <TextBlock Text="{Binding Interpretation}"
                                                                          TextWrapping="Wrap" Margin="0,3,0,0"/>
                                                            </StackPanel>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                    </ScrollViewer>
                                </Border>
                            </Expander>

                            <!-- Data Story Panel -->
                            <Expander Grid.Row="2"
                                     Header="📖 Data Story"
                                     IsExpanded="True"
                                     Visibility="{Binding DataStory, Converter={StaticResource NullToVisibilityConverter}}"
                                     Margin="5">
                                <Border BorderBrush="#E91E63" BorderThickness="2" Padding="10"
                                        Background="#FCE4EC">
                                    <ScrollViewer MaxHeight="300" VerticalScrollBarVisibility="Auto">
                                        <StackPanel>
                                            <TextBlock Text="{Binding DataStory.Title}"
                                                      FontWeight="Bold" FontSize="16" TextWrapping="Wrap" Margin="0,0,0,10"/>

                                            <TextBlock Text="Executive Summary" FontWeight="Bold" Margin="0,5,0,3"/>
                                            <TextBlock Text="{Binding DataStory.ExecutiveSummary}"
                                                      TextWrapping="Wrap" Margin="0,0,0,10"/>

                                            <TextBlock Text="Story:" FontWeight="Bold" Margin="0,10,0,5"/>
                                            <ItemsControl ItemsSource="{Binding DataStory.Chapters}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <StackPanel Margin="0,5">
                                                            <TextBlock Text="{Binding ChapterTitle}"
                                                                      FontWeight="Bold" FontSize="13"/>
                                                            <TextBlock Text="{Binding Content}"
                                                                      TextWrapping="Wrap" Margin="0,3,0,0"/>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>

                                            <TextBlock Text="Conclusion" FontWeight="Bold" Margin="0,10,0,3"/>
                                            <TextBlock Text="{Binding DataStory.Conclusion}"
                                                      TextWrapping="Wrap" Margin="0,0,0,10"/>

                                            <TextBlock Text="Key Takeaways:" FontWeight="Bold" Margin="0,10,0,5"/>
                                            <ItemsControl ItemsSource="{Binding DataStory.KeyTakeaways}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <TextBlock TextWrapping="Wrap" Margin="15,2,0,2">
                                                            <Run Text="• "/>
                                                            <Run Text="{Binding}"/>
                                                        </TextBlock>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>

                                            <Button Content="Export Story"
                                                   Command="{Binding ExportDataStoryCommand}"
                                                   Margin="0,10,0,0"
                                                   Background="#E91E63" Foreground="White"
                                                   HorizontalAlignment="Left"/>
                                        </StackPanel>
                                    </ScrollViewer>
                                </Border>
                            </Expander>
                        </Grid>
                    </TabItem>

                    <!-- History Tab -->
                    <TabItem Header="History">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Orientation="Vertical" Margin="5">
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="Refresh" Command="{Binding RefreshHistoryCommand}"/>
                                    <TextBox Width="300" Margin="10,0,0,0"
                                            Text="{Binding SemanticSearchQuery, UpdateSourceTrigger=PropertyChanged}"
                                            ToolTip="Enter a question to find semantically similar queries"/>
                                    <Button Content="🔍 AI Semantic Search"
                                           Command="{Binding PerformSemanticSearchCommand}"
                                           Margin="5,0,0,0"
                                           Background="#9C27B0" Foreground="White"
                                           ToolTip="Use AI to find queries with similar meaning"/>
                                </StackPanel>

                                <!-- Semantic Search Results -->
                                <Expander Header="🔍 Semantic Search Results"
                                         IsExpanded="True"
                                         Visibility="{Binding SemanticSearchResults.Count, Converter={StaticResource NullToVisibilityConverter}}"
                                         Margin="0,5,0,0">
                                    <ListView ItemsSource="{Binding SemanticSearchResults}"
                                             MaxHeight="150" Margin="5">
                                        <ListView.View>
                                            <GridView>
                                                <GridViewColumn Header="Question" Width="300" DisplayMemberBinding="{Binding NaturalLanguageQuery}"/>
                                                <GridViewColumn Header="Data Source" Width="120" DisplayMemberBinding="{Binding ConnectionProfileName}"/>
                                            </GridView>
                                        </ListView.View>
                                        <ListView.ItemContainerStyle>
                                            <Style TargetType="ListViewItem">
                                                <EventSetter Event="MouseDoubleClick" Handler="HistoryItem_DoubleClick"/>
                                            </Style>
                                        </ListView.ItemContainerStyle>
                                    </ListView>
                                </Expander>
                            </StackPanel>

                            <ListView Grid.Row="1" ItemsSource="{Binding History}" Margin="5">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="Time" Width="140" 
                                                       DisplayMemberBinding="{Binding ExecutedAt, StringFormat={}{0:MM/dd/yyyy HH:mm}}"/>
                                        <GridViewColumn Header="Question" Width="300" DisplayMemberBinding="{Binding NaturalLanguageQuery}"/>
                                        <GridViewColumn Header="Data Source" Width="120" DisplayMemberBinding="{Binding ConnectionProfileName}"/>
                                        <GridViewColumn Header="Rows" Width="60" DisplayMemberBinding="{Binding RowCount}"/>
                                        <GridViewColumn Header="Time (ms)" Width="80" DisplayMemberBinding="{Binding ExecutionTimeMs, StringFormat={}{0:F0}}"/>
                                    </GridView>
                                </ListView.View>
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem">
                                        <EventSetter Event="MouseDoubleClick" Handler="HistoryItem_DoubleClick"/>
                                    </Style>
                                </ListView.ItemContainerStyle>
                            </ListView>
                        </Grid>
                    </TabItem>

                    <!-- Favorites Tab -->
                    <TabItem Header="Favorites">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Button Grid.Row="0" Content="Refresh" 
                                   Command="{Binding RefreshFavoritesCommand}"
                                   HorizontalAlignment="Left" Margin="5"/>

                            <ListView Grid.Row="1" ItemsSource="{Binding Favorites}" Margin="5">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="Name" Width="200" DisplayMemberBinding="{Binding FavoriteName}"/>
                                        <GridViewColumn Header="Description" Width="300" DisplayMemberBinding="{Binding FavoriteDescription}"/>
                                        <GridViewColumn Header="Data Source" Width="120" DisplayMemberBinding="{Binding ConnectionProfileName}"/>
                                    </GridView>
                                </ListView.View>
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem">
                                        <EventSetter Event="MouseDoubleClick" Handler="FavoriteItem_DoubleClick"/>
                                    </Style>
                                </ListView.ItemContainerStyle>
                            </ListView>
                        </Grid>
                    </TabItem>
                </TabControl>
            </Grid>

            <GridSplitter Grid.Column="3" Width="5" HorizontalAlignment="Stretch"/>

            <!-- Right Panel: Validation, Explanation & AI Optimization -->
            <Border Grid.Column="4" BorderBrush="#DDD" BorderThickness="1,0,0,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <DockPanel>
                        <TextBlock DockPanel.Dock="Top" Text="Validation &amp; AI Analysis" FontWeight="Bold"
                                   Padding="10" Background="#F5F5F5"/>

                        <!-- Validation Results -->
                        <GroupBox DockPanel.Dock="Top" Header="Validation Results" Margin="10">
                            <ItemsControl ItemsSource="{Binding ValidationResult.Issues}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Padding="5" Margin="2" BorderThickness="1"
                                                BorderBrush="{Binding Severity, Converter={StaticResource SeverityToColorConverter}}"
                                                Background="{Binding Severity, Converter={StaticResource SeverityToBackgroundConverter}}">
                                            <StackPanel>
                                                <TextBlock Text="{Binding Message}" FontWeight="Bold" TextWrapping="Wrap"/>
                                                <TextBlock Text="{Binding Suggestion}"
                                                          FontStyle="Italic" TextWrapping="Wrap"
                                                          Visibility="{Binding Suggestion, Converter={StaticResource NullToVisibilityConverter}}"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </GroupBox>

                        <!-- AI Query Optimization -->
                        <GroupBox DockPanel.Dock="Top" Header="⚡ AI Query Optimization" Margin="10">
                            <DockPanel>
                                <Button DockPanel.Dock="Top"
                                       Content="Analyze Performance"
                                       Command="{Binding OptimizeQueryCommand}"
                                       HorizontalAlignment="Left"
                                       Margin="5"
                                       Background="#9C27B0" Foreground="White"
                                       ToolTip="Get AI-powered query optimization recommendations"/>

                                <StackPanel Visibility="{Binding QueryOptimization, Converter={StaticResource NullToVisibilityConverter}}">
                                    <!-- Performance Rating -->
                                    <Border Background="#E1BEE7" Padding="8" Margin="5">
                                        <StackPanel>
                                            <TextBlock Text="Performance Rating" FontWeight="Bold" FontSize="11"/>
                                            <TextBlock Text="{Binding QueryOptimization.PerformanceRating}"
                                                      FontSize="16" FontWeight="Bold" Margin="0,5,0,0"/>
                                            <TextBlock Text="{Binding QueryOptimization.EstimatedImprovement}"
                                                      FontStyle="Italic" TextWrapping="Wrap" Margin="0,5,0,0"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- Recommendations -->
                                    <TextBlock Text="Recommendations:" FontWeight="Bold"
                                              Margin="5,10,5,5"/>
                                    <ItemsControl ItemsSource="{Binding QueryOptimization.Recommendations}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border BorderBrush="#9C27B0" BorderThickness="1"
                                                       Padding="8" Margin="5" Background="#F3E5F5">
                                                    <StackPanel>
                                                        <StackPanel Orientation="Horizontal">
                                                            <Border Background="#9C27B0" Padding="3,1" CornerRadius="2">
                                                                <TextBlock Text="{Binding Priority}"
                                                                          Foreground="White" FontSize="10"/>
                                                            </Border>
                                                            <Border Background="#7B1FA2" Padding="3,1"
                                                                   CornerRadius="2" Margin="5,0,0,0">
                                                                <TextBlock Text="{Binding Type}"
                                                                          Foreground="White" FontSize="10"/>
                                                            </Border>
                                                        </StackPanel>
                                                        <TextBlock Text="{Binding Issue}"
                                                                  FontWeight="Bold" TextWrapping="Wrap"
                                                                  Margin="0,5,0,0"/>
                                                        <TextBlock Text="{Binding Suggestion}"
                                                                  TextWrapping="Wrap" Margin="0,3,0,0"/>
                                                        <TextBlock Text="{Binding Impact}"
                                                                  FontStyle="Italic" Foreground="Green"
                                                                  TextWrapping="Wrap" Margin="0,3,0,0"/>
                                                    </StackPanel>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                    <!-- Apply Optimized SQL Button -->
                                    <Button Content="✓ Apply Optimized SQL"
                                           Command="{Binding ApplyOptimizedQueryCommand}"
                                           Background="#4CAF50" Foreground="White"
                                           Margin="5,10,5,5"
                                           ToolTip="Replace current SQL with optimized version"/>
                                </StackPanel>
                            </DockPanel>
                        </GroupBox>

                        <!-- AI Data Profiling & PII Detection -->
                        <GroupBox DockPanel.Dock="Top" Header="🔒 Data Profiling &amp; PII" Margin="10">
                            <DockPanel>
                                <Button DockPanel.Dock="Top"
                                       Content="Profile Data &amp; Detect PII"
                                       Command="{Binding ProfileDataCommand}"
                                       HorizontalAlignment="Left"
                                       Margin="5"
                                       Background="#FF5722" Foreground="White"
                                       ToolTip="AI-powered GDPR compliance and PII detection"/>

                                <StackPanel Visibility="{Binding DataProfilingResult, Converter={StaticResource NullToVisibilityConverter}}">
                                    <Border Background="#FFEBEE" Padding="8" Margin="5">
                                        <StackPanel>
                                            <TextBlock Text="Overall Risk" FontWeight="Bold"/>
                                            <TextBlock Text="{Binding DataProfilingResult.OverallRisk}"
                                                      FontSize="16" FontWeight="Bold" Margin="0,5,0,0"/>
                                            <TextBlock Text="PII Findings" FontWeight="Bold" Margin="0,10,0,5"/>
                                            <ItemsControl ItemsSource="{Binding DataProfilingResult.PiiFindings}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border BorderBrush="#FF5722" BorderThickness="1"
                                                               Padding="5" Margin="2" Background="#FFF3E0">
                                                            <StackPanel>
                                                                <TextBlock FontWeight="Bold">
                                                                    <Run Text="{Binding ColumnName}"/>
                                                                    <Run Text=" - "/>
                                                                    <Run Text="{Binding PiiType}"/>
                                                                </TextBlock>
                                                                <TextBlock Text="{Binding Recommendation}"
                                                                          FontStyle="Italic" FontSize="11"/>
                                                            </StackPanel>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </DockPanel>
                        </GroupBox>

                        <!-- AI Data Quality Score -->
                        <GroupBox DockPanel.Dock="Top" Header="⭐ Data Quality Score" Margin="10">
                            <DockPanel>
                                <Button DockPanel.Dock="Top"
                                       Content="Calculate Quality Score"
                                       Command="{Binding CalculateQualityScoreCommand}"
                                       HorizontalAlignment="Left"
                                       Margin="5"
                                       Background="#4CAF50" Foreground="White"
                                       ToolTip="AI calculates 0-100 quality score for your data"/>

                                <StackPanel Visibility="{Binding DataQualityScore, Converter={StaticResource NullToVisibilityConverter}}">
                                    <Border Background="#E8F5E9" Padding="10" Margin="5">
                                        <StackPanel>
                                            <TextBlock Text="Overall Score" FontWeight="Bold"/>
                                            <TextBlock FontSize="32" FontWeight="Bold" Margin="0,5,0,0">
                                                <Run Text="{Binding DataQualityScore.OverallScore, StringFormat={}{0:F1}}"/>
                                                <Run Text="/100" FontSize="16"/>
                                            </TextBlock>
                                            <TextBlock FontSize="20" FontWeight="Bold" Foreground="#4CAF50">
                                                <Run Text="Grade: "/>
                                                <Run Text="{Binding DataQualityScore.Grade}"/>
                                            </TextBlock>

                                            <TextBlock Text="Top Recommendations:" FontWeight="Bold" Margin="0,10,0,5"/>
                                            <ItemsControl ItemsSource="{Binding DataQualityScore.Recommendations}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border BorderBrush="#4CAF50" BorderThickness="1"
                                                               Padding="5" Margin="2">
                                                            <StackPanel>
                                                                <TextBlock Text="{Binding Action}"
                                                                          FontWeight="Bold" TextWrapping="Wrap"/>
                                                                <TextBlock Text="{Binding ExpectedImprovement}"
                                                                          FontStyle="Italic" FontSize="11" Foreground="Green"/>
                                                            </StackPanel>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </DockPanel>
                        </GroupBox>

                        <!-- Dashboard Generator -->
                        <GroupBox DockPanel.Dock="Top" Header="📊 Dashboard Generator" Margin="10">
                            <StackPanel>
                                <TextBlock Text="Dashboard Topic:" Margin="5,5,5,2"/>
                                <TextBox Text="{Binding DashboardTopic, UpdateSourceTrigger=PropertyChanged}"
                                        Padding="5" Margin="5,0,5,5"/>
                                <Button Content="Generate Dashboard"
                                       Command="{Binding GenerateDashboardCommand}"
                                       Margin="5"
                                       Background="#00BCD4" Foreground="White"
                                       ToolTip="AI creates instant BI dashboard with 6-8 widgets"/>

                                <TextBlock Text="{Binding GeneratedDashboard.Widgets.Count, StringFormat='Dashboard: {0} widgets'}"
                                          Visibility="{Binding GeneratedDashboard, Converter={StaticResource NullToVisibilityConverter}}"
                                          FontWeight="Bold" Margin="5"/>
                            </StackPanel>
                        </GroupBox>

                        <!-- Business Impact Analysis -->
                        <GroupBox DockPanel.Dock="Top" Header="⚠️ Impact Analysis" Margin="10">
                            <DockPanel>
                                <TextBlock DockPanel.Dock="Top" Text="Schema Change Description:" Margin="5,5,5,2"/>
                                <TextBox DockPanel.Dock="Top"
                                        Text="{Binding SchemaChangeDescription, UpdateSourceTrigger=PropertyChanged}"
                                        Padding="5" Margin="5,0,5,5"
                                        TextWrapping="Wrap" AcceptsReturn="True" MinHeight="60"/>
                                <Button DockPanel.Dock="Top"
                                       Content="Analyze Impact"
                                       Command="{Binding AnalyzeImpactCommand}"
                                       HorizontalAlignment="Left"
                                       Margin="5"
                                       Background="#F44336" Foreground="White"
                                       ToolTip="Predict business impact of schema changes"/>

                                <StackPanel Visibility="{Binding ImpactAnalysis, Converter={StaticResource NullToVisibilityConverter}}">
                                    <Border Background="#FFEBEE" Padding="8" Margin="5">
                                        <StackPanel>
                                            <TextBlock Text="Impact Level" FontWeight="Bold"/>
                                            <TextBlock Text="{Binding ImpactAnalysis.ImpactLevel}"
                                                      FontSize="16" FontWeight="Bold" Margin="0,5,0,0"/>
                                            <TextBlock>
                                                <Run Text="Affected Queries: "/>
                                                <Run Text="{Binding ImpactAnalysis.AffectedQueries.Count}" FontWeight="Bold"/>
                                            </TextBlock>
                                            <TextBlock>
                                                <Run Text="Est. Downtime: "/>
                                                <Run Text="{Binding ImpactAnalysis.EstimatedDowntimeMinutes}" FontWeight="Bold"/>
                                                <Run Text=" minutes"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </DockPanel>
                        </GroupBox>

                        <!-- AI Query Cost Estimator -->
                        <GroupBox DockPanel.Dock="Top" Header="💰 Query Cost Estimator" Margin="10">
                            <DockPanel>
                                <StackPanel DockPanel.Dock="Top" Margin="5">
                                    <TextBlock Text="Cloud Provider:" Margin="0,0,0,2"/>
                                    <ComboBox SelectedValue="{Binding CloudProvider}" Margin="0,0,0,5">
                                        <ComboBoxItem Content="Azure SQL" Tag="azure" IsSelected="True"/>
                                        <ComboBoxItem Content="AWS RDS" Tag="aws"/>
                                        <ComboBoxItem Content="On-Premise" Tag="on-premise"/>
                                    </ComboBox>
                                </StackPanel>
                                <Button DockPanel.Dock="Top"
                                       Content="Estimate Cost"
                                       Command="{Binding EstimateQueryCostCommand}"
                                       HorizontalAlignment="Left"
                                       Margin="5"
                                       Background="#FF9800" Foreground="White"
                                       ToolTip="Predict query cost BEFORE execution"/>

                                <StackPanel Visibility="{Binding QueryCostEstimate, Converter={StaticResource NullToVisibilityConverter}}">
                                    <Border Background="#FFF3E0" Padding="8" Margin="5">
                                        <StackPanel>
                                            <TextBlock Text="Estimated Cost" FontWeight="Bold"/>
                                            <TextBlock FontSize="20" FontWeight="Bold" Foreground="#FF6F00">
                                                <Run Text="$"/>
                                                <Run Text="{Binding QueryCostEstimate.EstimatedCloudCostUsd, StringFormat={}{0:F4}}"/>
                                            </TextBlock>
                                            <TextBlock>
                                                <Run Text="Time: "/>
                                                <Run Text="{Binding QueryCostEstimate.EstimatedExecutionTimeSeconds, StringFormat={}{0:F2}}"/>
                                                <Run Text="s ("/>
                                                <Run Text="{Binding QueryCostEstimate.ExecutionTimeCategory}"/>
                                                <Run Text=")"/>
                                            </TextBlock>
                                            <TextBlock Text="Resource Usage:" FontWeight="Bold" Margin="0,5,0,2"/>
                                            <TextBlock>
                                                <Run Text="CPU: "/>
                                                <Run Text="{Binding QueryCostEstimate.ResourceUsage.CpuUsage}"/>
                                            </TextBlock>
                                            <TextBlock>
                                                <Run Text="Rows Scanned: "/>
                                                <Run Text="{Binding QueryCostEstimate.ResourceUsage.EstimatedRowsScanned, StringFormat={}{0:N0}}"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </DockPanel>
                        </GroupBox>

                        <!-- Explanation -->
                        <GroupBox Header="Explanation" Margin="10">
                            <DockPanel>
                                <Button DockPanel.Dock="Top"
                                       Content="Explain SQL"
                                       Command="{Binding ExplainSqlCommand}"
                                       HorizontalAlignment="Left"
                                       Margin="5"
                                       ToolTip="Generate natural language explanation of the SQL statement using OpenAI"/>
                                <ScrollViewer VerticalScrollBarVisibility="Auto">
                                    <TextBlock Text="{Binding Explanation}"
                                              TextWrapping="Wrap" Padding="5"/>
                                </ScrollViewer>
                            </DockPanel>
                        </GroupBox>
                    </DockPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#F5F5F5" BorderBrush="#DDD" BorderThickness="0,1,0,0" Padding="10,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="{Binding StatusMessage}" VerticalAlignment="Center"/>
                <ProgressBar Grid.Column="1" Width="150" Height="20" 
                            IsIndeterminate="True"
                            Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}"/>
            </Grid>
        </Border>
    </Grid>
</Window>
